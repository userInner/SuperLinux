# Polymarket API配置
POLYMARKET_API_BASE_URL=https://clob.polymarket.com
POLYMARKET_API_KEY=your_api_key_here
POLYMARKET_API_SECRET=your_api_secret_here

# 套利参数配置
MIN_PROFIT_THRESHOLD=0.005  # 最小利润阈值（0.5%）
MAX_SLIPPAGE=0.001          # 最大滑点（0.1%）
TRANSACTION_FEE=0.002       # 交易手续费（0.2%）
CHECK_INTERVAL=5            # 检查间隔（秒）

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/arbitrage.log

# 数据库配置（可选）
DATABASE_URL=sqlite:///data/arbitrage.db
REDIS_URL=redis://localhost:6379/0

# 通知配置（可选）
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id
DISCORD_WEBHOOK_URL=your_discord_webhook_url

# 交易限制
MAX_POSITION_SIZE=1000      # 最大仓位（USDC）
MIN_MARKET_LIQUIDITY=10000  # 最小市场流动性（USDC）
MAX_LEVERAGE=1.0            # 最大杠杆

# 风险控制
STOP_LOSS_PERCENTAGE=0.05   # 止损百分比（5%）
TAKE_PROFIT_PERCENTAGE=0.10 # 止盈百分比（10%）
MAX_DRAWDOWN=0.20           # 最大回撤（20%）

# 监控配置
ENABLE_REALTIME_MONITORING=true
ENABLE_EMAIL_ALERTS=false
ENABLE_SMS_ALERTS=false

# 邮件配置（可选）
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=your_email@gmail.com
EMAIL_TO=recipient_email@gmail.com